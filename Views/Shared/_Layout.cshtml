<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Baynatna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Baynatna.styles.css" asp-append-version="true" />
    <style>
        .navbar-turquoise {
            background: #fff !important;
            color: #111 !important;
            border-bottom: none !important;
            box-shadow: none !important;
        }
        .footer-turquoise {
            background: #27242d;
            color: #fff !important;
            text-align: center;
        }
        .navbar-turquoise .navbar-brand, .navbar-turquoise .btn, .navbar-turquoise .nav-link {
            color: #111 !important;
        }
        .btn-header {
            background: transparent !important;
            color: #111 !important;
            border: none !important;
            box-shadow: none !important;
            font-weight: bold !important;
            transition: background 0.2s, color 0.2s;
        }
        .btn-header:hover, .btn-header:focus {
            background: transparent !important;
            color: #3ad5d7 !important;
            border: none !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 navbar-turquoise">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Baynatna</a>
                <div class="d-flex align-items-center ms-auto">
                    <button id="decrease-font" class="btn btn-header me-2" title="Decrease font size">A-</button>
                    <button id="increase-font" class="btn btn-header me-2" title="Increase font size">A+</button>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <a class="btn btn-header" asp-controller="Post" asp-action="Create">Create Post</a>
                    }
                    else
                    {
                        <a class="btn btn-header" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer-turquoise">
        <div class="container">
            &copy; 2025 - Baynatna - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Font size control
        let fontSize = 16;
        document.getElementById('increase-font').onclick = function() {
            fontSize = Math.min(fontSize + 2, 32);
            document.body.style.fontSize = fontSize + 'px';
        };
        document.getElementById('decrease-font').onclick = function() {
            fontSize = Math.max(fontSize - 2, 10);
            document.body.style.fontSize = fontSize + 'px';
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
