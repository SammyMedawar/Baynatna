@model Baynatna.ViewModels.CreatePostViewModel
@{
    ViewData["Title"] = "Create Post";
    var tags = ViewBag.Tags as List<Baynatna.Models.Tag>;
}
<h2>Create Post</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="OriginalBody" class="form-label">Post Body: Your comment in english or arabic</label>
        <textarea asp-for="OriginalBody" class="form-control"></textarea>
        <span asp-validation-for="OriginalBody" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TranslatedBody" class="form-label">The translation of your comment in english or arabic <span class="text-muted">(Optional)</span></label>
        <textarea asp-for="TranslatedBody" class="form-control"></textarea>
        <span asp-validation-for="TranslatedBody" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VoiceMessageUrl" class="form-label">Voice Message</label>
        <div>
            <button type="button" class="btn btn-outline-secondary" disabled style="font-size: 1.5rem; border-radius: 50%; width: 48px; height: 48px;">
                <i class="bi bi-mic"></i> <!-- Bootstrap icon, or use emoji ðŸŽ¤ -->
                ðŸŽ¤
            </button>
            <span class="text-muted ms-2">(Recording coming soon)</span>
        </div>
        <span asp-validation-for="VoiceMessageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TagId" class="form-label">Ministry</label>
        <select asp-for="TagId" class="form-select">
            <option value="">-- Select Ministry --</option>
            @if (tags != null)
            {
                foreach (var tag in tags)
                {
                    <option value="@tag.Id">@tag.Name</option>
                }
            }
        </select>
        <span asp-validation-for="TagId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create Post</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 