@{
    ViewData["Title"] = "Home Page";
    var isLoggedIn = Context.Session.GetInt32("UserId") != null;
}
<link rel="stylesheet" href="~/css/common.css" />
<link rel="stylesheet" href="~/css/home.css" />
<div class="hero-banner">
    <h1 class="display-3 fw-bold text-center">Welcome to BAYNATNA</h1>
    <p class="lead text-center px-3 px-md-5" style="font-size: 1.5rem;">
        A safe, anonymous space to report and discuss local issues, empowering voices of all backgrounds, genders, abilities, and regions to shape respectful and inclusive communities across Lebanon
    </p>
    <div class="text-center mt-1">
        <img src="~/images/lebanon.svg" alt="Lebanese Flag" style="width: 40px; height: auto;" />
    </div>
</div>
<div class="home-options">
    <a class="home-option complaints" asp-controller="Complaint" asp-action="Index">
        <span class="home-option-icon">📝</span>
        <span class="underline">Complaints</span>
    </a>
    <a class="home-option my-complaints" href="#">
        <span class="home-option-icon">👤</span>
        <span class="underline">My Complaints</span>
    </a>
    @if (isLoggedIn)
    {
        <a class="home-option logout" asp-controller="User" asp-action="Logout">
            <span class="home-option-icon">🚪</span>
            <span class="underline">Logout</span>
        </a>
    }
    else
    {
        <a class="home-option login" asp-controller="User" asp-action="Login">
            <span class="home-option-icon">🔑</span>
            <span class="underline">Login</span>
        </a>
    }
</div>
