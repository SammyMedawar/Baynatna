@{
    ViewData["Title"] = "Home Page";
    var isLoggedIn = Context.Session.GetInt32("UserId") != null;
}
<link rel="stylesheet" href="~/css/common.css" />
<link rel="stylesheet" href="~/css/home.css" />
<div class="hero-banner">
    <h1 class="display-3 fw-bold text-center">Welcome to BAYNATNA</h1>
    <p class="lead text-center">Your Gateway To Reporting And Resolving Local Issues</p>
</div>
<div class="home-options">
    <a class="home-option complaints" asp-controller="Post" asp-action="Index">
        <span class="home-option-icon">📝</span>
        <span>Complaints</span>
    </a>
    <a class="home-option my-complaints" href="#">
        <span class="home-option-icon">👤</span>
        <span>My Complaints</span>
    </a>
    @if (isLoggedIn)
    {
        <a class="home-option logout" asp-controller="User" asp-action="Logout">
            <span class="home-option-icon">🚪</span>
            <span>Logout</span>
        </a>
    }
    else
    {
        <a class="home-option login" asp-controller="User" asp-action="Login">
            <span class="home-option-icon">🔑</span>
            <span>Login</span>
        </a>
    }
</div>
